{
    "n"  : 1,    //# of polynomial coefficients (3)
    "Nx" : 300,  //# grid points in x (192)
    "Ny" : 300,  //# grid points in y (192)
    "dt" : 1.01, //time step in units c_s/L_p (0.01)
    "n_out"  : 3,   //# x-y polynomials in output
    "Nx_out" : 100, //# grid points in x in output fields
    "Ny_out" : 100, //# grid points in y in output fields
    "itstp"  : 2,   //# steps between outputs (5)
    "maxout" : 100, //# outputs excluding first
    "eps_time"  : 1e-9, //accuracy of implicit time-stepper (1e-8)
    "eps_pol"   : 1e-4, //accuracy of polarisation solver
    "eps_gamma" : 1e-8, //accuracy of Gamma (1e-6)
    "kappa" : 0.0005, //magnetic curvature
    "nu"  : 1e-3,   //pependicular viscosity
    "lx"  : 400, //lx in units of rho_s
    "ly"  : 400, //ly in units of rho_s
    "bc_x"  : "DIR", //boundary condition in x (1: Dirichlet, 0: periodich)
    "bc_y"  : "PER", //boundary condition in y
    "amp"   : 2.0,  //perturbation (blob) amplitude
    "sigma" : 10.,   //blob variance in units of rho_s
    "posX"  : 0.25, //blob x-position in units of lx (0.4)
    "posY"  : 0.5,  //blob y-position in units of ly
    "tau" : 3.0,  //Ti/Te
    "tau_z" : 0., //tau_z/Z tau_e
    "a_z"   : 0., //(Z n_z0/n_e0 < 1, a_i <- 1-a_z) (0.1)
    "mu_z"  : 3., // (m_z/Z m_i) (48)
    "vorticity" : 0., // ( 0 -> phi~0, 1 n_e~n_i)
    "mode"  : 2, // (init mode; 1:const back, 2: impurity wall, 3: impurity blob)
    "wall_pos"   : 0.4, //
    "wall_amp"   : 1.,  //
    "wall_sigma" : 10.  //
}
